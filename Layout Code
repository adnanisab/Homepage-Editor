<script>
$(document).ready(function(){
	$('.hpx-iframe').css('height',$(window).height() - $('.hpx-header').innerHeight());
});
$(window).bind('load',function(){
	$('.hpx-iframe').css('height',$(window).height() - $('.hpx-header').innerHeight());
});
$.myhpe = function() {
	$('.hpx-loader').animate({opacity: 0}, 400, function() {
		$('.hpx-loader').css('display','none');
	});
	$('.hpx-iframe').css('visibility','visible');
	$('.hpx-iframe').animate({opacity: 1}, 400);
};
function display() {
	$.myhpe();
};
</script>
